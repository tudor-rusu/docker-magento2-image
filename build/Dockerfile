ARG NGINX_VERSION=stable
ARG PHP_VERSION=7.3
ARG MAGENTO_VERSION=2.3.4
ARG MEMORY=2G
ARG TIMEZONE=Europe/Berlin
ARG ROOT=/var/www/html

FROM nginx:${NGINX_VERSION}

LABEL maintainer="tudor.rusu@hotmail.com"
LABEL php_version=${NGINX_VERSION}
LABEL php_version=${PHP_VERSION}
LABEL magento_version=${MAGENTO_VERSION}
LABEL description="Magento 2.3.4 with PHP 7.3"

ENV PHP_VERSION $PHP_VERSION
ENV PHP_MEMORY_LIMIT $MEMORY
ENV PHP_TIMEZONE $TIMEZONE
ENV MAGENTO_VERSION $MAGENTO_VERSION
ENV INSTALL_DIR $ROOT

WORKDIR $INSTALL_DIR